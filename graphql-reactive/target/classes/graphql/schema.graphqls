type Query {
    customers: [Customer]
    customersByName(name: String ) : [Customer]
}

type Customer {
    id: ID
    name: String
    orders: [Order]
}

type Order {
    id: ID
    customerId: ID
}

type Mutation {
    addCustomer(id: ID, name: String) : Customer
}

type Subscription {
    customerEvents(customerId: ID):CustomerEvent
}

type CustomerEvent {
    customer: Customer
    event: CustomerEventType
}

enum CustomerEventType {
    UPDATED
    DELETED
}